<a href="#" class="js-next" data-id="<%=@post.id%>">Next Product</a>
<h1 class="postName"><%= @post.name %></h1>
<p class="postInventory"><%= @post.inventory %></p>
<p class="postPrice"><%= @post.price %></p>
<p class="postDescription"><%= @post.description %></p>

<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/posts/" + nextId + ".json", function(data) {
      $(".postName").text(data["name"]);
      $(".postTitle").text(data["title"]);
      $(".postPrice").text(data["price"]);
      $(".postDescription").text(data["description"]);
      $(".postInventory").text(data["inventory"]);
      // re-set the id to current on the link
      $(".js-next").attr("data-id", data["id"]);
    });
  });
});
</script>
